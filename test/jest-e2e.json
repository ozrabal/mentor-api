{
  "displayName": "e2e",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "../",
  "testMatch": ["<rootDir>/test/**/*.e2e-spec.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@modules/(.*)$": "<rootDir>/src/modules/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/setup/e2e-setup.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleFileExtensions": ["js", "json", "ts"],
  "testTimeout": 30000,
  "maxWorkers": 1,
  "forceExit": true
}